{
    "manifest_version": 2,
    "name": "Unspoilify Netflix",
    "version": "1.1.0",
    "description": "Removes those nefarious Netflix pause descriptions. Watch your favorite show without spoiler anxiety.",
    "content_scripts": [
        {
            "matches": ["*://*.netflix.com/*"],
            "js": ["src/removedesc.js"]
        }
    ],
    "icons": {
        "48": "/icon/icon.png",
        "96": "/icon/icon@2x.png"
    },
    "permissions": ["*://*.netflix.com/*", "storage"],
    "web_accessible_resources": ["src/removepausedesc.css", "src/removeplayerdesc.css"],
    "options_ui": {
        "page": "src/options.html",
        "browser_style": true
    }
}
